#include "../definitions.zir"
#include "../dlsch.zir"
#include "../pdsch.zir"


fun comp test_dlsch() { 
var input : arr [MAX_BIT_MSG_SIZE] bit;
  x <- takes 32;
  do{input[0, 32] := x};
  let outlen = 72 in 
  let output = dlsch(input, 32, outlen, 0) in
  emits output[0, 72];
};

let comp main = read[bit] >>> test_dlsch() >>> 
  { var tx : struct TXParams
  ; do { tx := configTX()
       ; tx := initTXParams(tx)}
  ; pdsch(0, 64, PDSCH_MODULATION_QPSK, tx) 
  } >>> write


